.full {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center; /*定义body的元素垂直居中*/
  justify-content: center; /*定义body的里的元素水平居中*/
}
.mark{
  color:black;           /*设置文字颜色*/
  font-weight:bold;    /*设置字体加粗*/
  font-family:"宋体";
  text-align: center;
  font-size: large;
  display:block;
  margin: 20rpx;
}
.content {
  margin-top: 50px;
  align-items: center; /*定义body的元素垂直居中*/
  justify-content: center; /*定义body的里的元素水平居中*/
}
.radio-group{
  align-items: center; /*定义body的元素垂直居中*/
  justify-content: center; /*定义body的里的元素水平居中*/
